@model List<Products>
<partial name="_Notification" />

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Product Groups</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
                Add New Product Group</>
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>
                    Product Group
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Name))
            {
                <tr>
                    <td>@obj.Name</td>


                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@obj.Name" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-secondary w-50">Back</a>
</div>