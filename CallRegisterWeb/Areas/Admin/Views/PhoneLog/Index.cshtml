@model List<PhoneCall>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>
                Agent Name
            </th>
            <th>
                Allocated Date
            </th>
            <th>
                Date Due
            </th>
            <th>Overdue</th>
            <th>Product</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@obj.Agent</td>
                <td>@obj.AllocatedDate</td>
                <td>@obj.DateDue</td>
                @if(obj.DateDue > obj.DateCompleted)
                { <td>Yes</td>
                }
                else
                {
                    <td>No</td>
                }                  
